package com.quicklocal.service;

import com.quicklocal.model.Order; // Import your Order model
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.mail.SimpleMailMessage;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

@Service
public class EmailService {

    @Autowired
    private JavaMailSender javaMailSender;

    @Autowired
    private OrderService orderService; // Assuming you have an OrderService

    public void sendEmail(Integer orderId) {
        Order order = orderService.getOrderById(orderId); // Fetch order details by ID

        if (order != null) {
            SimpleMailMessage mailMessage = new SimpleMailMessage();
            mailMessage.setTo(order.getEmail());
            mailMessage.setSubject("Your Order Details"); // Set your email subject
            mailMessage.setText("Your order details: " + order.getDescription()); // Set your email body

            javaMailSender.send(mailMessage);
        }
    }
}
